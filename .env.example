# GitHub Personal Access Token (需要 repo 权限)
GITHUB_TOKEN=ghp_your_github_token_here

# Webhook Secret (在 GitHub 仓库设置中配置)
WEBHOOK_SECRET=your_webhook_secret_here

# 服务器端口
PORT=8080

# Anthropic API Key (Claude API 调用)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Bot 配置
BOT_NAME=claude-github-bot
BOT_EMAIL=bot@example.com

# Claude Code CLI 配置
CLAUDE_COMMAND=npx @anthropic-ai/claude-code
CLAUDE_INSTALL_SOURCE=https://registry.npmjs.org/

# Docker 配置
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_NAME=claude-github-bot

# GitHub App 配置 (可选，用于更高级的权限管理)
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=
GITHUB_APP_KEY_FILE=